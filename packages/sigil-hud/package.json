{
  "name": "@sigil/hud",
  "version": "0.1.0",
  "description": "Lightweight HUD overlay for Sigil Soul Engine - tension sliders, material picker, fidelity status",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "@sigil/soul-engine": ">=0.4.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.2.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "keywords": [
    "sigil",
    "hud",
    "overlay",
    "tension-sliders",
    "material-picker",
    "fidelity-status",
    "react",
    "development-tools"
  ],
  "author": "Sigil Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sigil/soul-engine.git",
    "directory": "packages/sigil-hud"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
